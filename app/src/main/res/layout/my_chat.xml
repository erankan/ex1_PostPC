<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_id">


    <TextView
        android:id="@+id/senderText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textSize="15sp"
        android:text="@string/message_user_name" />

    <TextView
        android:id="@+id/dataText"
        android:layout_toEndOf="@+id/senderText"
        android:layout_toRightOf="@+id/senderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="2dp"
        tools:text="@string/message_text"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/timeStampText"
        android:layout_below="@+id/dataText"
        android:layout_toEndOf="@+id/senderText"
        android:layout_toRightOf="@+id/senderText"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/message_time" />



</RelativeLayout>